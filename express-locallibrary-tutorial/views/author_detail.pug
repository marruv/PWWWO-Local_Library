extends layout

block content

  h1 Author: #{author.name} <!-- Shows author's name -->
  p #{author.lifespan} <!-- Shows author's date of birth and date of death if author has deceased -->
  
  div(style='margin-left:50px;margin-top:20px')

    h4 Books
    
    dl
      each book in author_books
        dt 
          a(href=book.url) #{book.title} <!-- Shows book's title -->
        dd #{book.summary} <!-- Shows short plot summary of the book -->

      else
        p This author has no books.

  hr
  p
    a(href=author.url+'/delete') Delete author